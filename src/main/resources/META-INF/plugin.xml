<idea-plugin>
    <id>dev.tho.pycharm-poetry</id>
    <name>Pycharm Poetry</name>
    <vendor email="thomasverweij01@gmail.com" url="https://tho.dev">thodev</vendor>

    <description><![CDATA[
        Plugin to install project dependencies and configure interpreter with poetry.
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>PythonCore</depends>
    <depends>com.intellij.modules.python</depends>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="PoetryStartupActivity"/>
    </extensions>
       <actions>
        <!-- Add your actions here -->
        <action id="PoetryAction" class="PoetryAction" text="Poetry Update/Install" description="Use poetry to manage project">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>